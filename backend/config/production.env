# Production Environment Configuration for Backend-API Ocean Climate Data System
# Generated: 2025-07-24

# Copernicus Marine Service Authentication
# These will be loaded from the parent .env file
COPERNICUS_MARINE_USERNAME=${COPERNICUS_USERNAME}
COPERNICUS_MARINE_PASSWORD=${COPERNICUS_PASSWORD}

# API Configuration
CACHE_TTL_HOURS=24
WEBSOCKET_PORT=8765
API_REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION_DAYS=7

# Cache Configuration
CACHE_DIR=cache
CACHE_MAX_SIZE_MB=1000
CACHE_CLEANUP_INTERVAL_HOURS=6

# Performance Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
CONNECTION_POOL_SIZE=20
REQUEST_RETRY_ATTEMPTS=3
REQUEST_RETRY_DELAY_SECONDS=2

# Data Quality Settings
MIN_DATA_POINTS_REQUIRED=10
DATA_STALENESS_THRESHOLD_HOURS=48
COORDINATE_PRECISION_DECIMALS=4

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_MESSAGE_SIZE_LIMIT_KB=1024

# Feature Flags
ENABLE_TEMPERATURE_MONITORING=true
ENABLE_MICROPLASTICS_RESEARCH=true
ENABLE_SEA_LEVEL_MONITORING=false
ENABLE_OCEAN_CHEMISTRY=false
ENABLE_PERFORMANCE_MONITORING=true